<div class ='container'>


  <img id="benner" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxVI3bKqyHronrexQBS4zt-DDIuBvPgVYCCokd-7BlHfIs5NPx">

  <button id="cre" type="button" class="btn btn-success" onclick="location.href='/home/create'";>글쓰기</button>
  <%= paginate @posts %>
  <table class="table table-hover">
  <th class="col-md-5">
    Title
  </th>
  <th class="col-md-5">
    Contents
  </th>
  <th class="col-md-2">
    Edit
  </th>
  <% @posts.each do |post|%>
      <tr class="warning">
        <td class="col-md-5">
          <a class="atag" href = '/home/read/<%=post.id%>'><%=post.title%></a>
        </td>
        <td class="col-md-5">
          <a class="atag" href = '/home/read/<%=post.id%>'><%=post.content%></a>
        </td>
        <td class="col-md-2">
          <% if post.user == current_user %>
              <button type="button" class="btn btn-warning" onclick="location.href='/home/update/<%=post.id%>'";>수정</button>
              <button type="button" class="btn btn-danger" onclick="location.href='/home/destroy/<%=post.id%>'";>삭제</button>
          <% end %>
        </td>
      </tr>
  <%end%>
</table>
</div>