<style>
  textarea{
    resize:none;
    margin-bottom:20px;
  }
    .jumbotron{
      margin-top:100px;
    }
</style>
<div class ='container'>
  <div class="jumbotron">
  <h1>글 수정하기</h1>
    <hr>
  <form method="get" action = "/home/real_update/<%=@post.id%>">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" value="<%= @post.title%>" id="title" name = "title" placeholder="title">
    </div>
    <div class="from-group">
      <label >내용</label>
      <textarea name = 'content' id = 'content' class = 'form-control' rows="6"><%=@post.content%></textarea>
    </div>
    <img src="<%=@post.img_url%>">
    <hr>
    <button type="submit" class="btn btn-success">수정완료</button>
    <button type="button" class="btn btn-warning" onclick="location.href='/'";>목록으로</button>
  </form>
  </div>
</div>